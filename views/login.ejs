    <title>Login</title>
    <link href="/stylesheets/loginalarme/bootstrap.css" rel="stylesheet">
    <link href="/stylesheets/loginalarme/login-page.css" rel="stylesheet">
</head>
<body class="login-page" style="background: linear-gradient(0deg, rgba(255,255,255,1) 0%, rgba(224,224,231,1) 81%, rgba(202,206,218,1) 100%); font-family: MerriweatherSans;">
    <div class="page-wrapper col-md-12 col-sm-5 col-xs-12">
        <div class="logo-wrapper col-md-5 col-sm-12 vcenter">
            <div class="logo-box row pull-right">
                <div class="logo-info col-md-8 vcenter ">
                </div>
                <div class=" col-md-4 vcenter">
                        <img src="/images/logo-mitsui.svg" class="align-self-center" alt="">
                </div>
            </div>
        </div>
        <div class="text-justify fillable-form-wrapper col-md-5 col-sm-12 vcenter">
            <div class="fillable-form">
                <form action="/" method="post" class="form-group texto">
                    <div class="form-group col-md-12">
                        <div class="page-location col-md-offset-3 ">Faça Login</div>
                        
                    </div>
                    <div class="form-group col-md-10">

                        <form id="login-form" action="/managerpbx/web/site/login" method="post">
                            <label for='matricula' class="control-label col-md-3">Usuário</label>
                            <div class="col-md-9">

                                <div class="form-group has-feedback field-loginform-username required">

                                    <input type="text" id="loginform-username" class="form-control" name="user"
                                        placeholder="Usuário" aria-required="true">

                                    <p class="help-block help-block-error"></p>
                                </div>
                            </div>
                    </div>

                    <div class="form-group col-md-10">
                        <label for='password' class="control-label col-sm-3">Senha</label>
                        <div class="col-sm-9">
                            <div class="form-group has-feedback field-loginform-password required">

                                <input type="password" id="loginform-password" class="form-control" name="senha"
                                    value="" placeholder="Senha" aria-required="true">

                                <p class="help-block help-block-error"></p>
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-10">
                        <div class="col-md-9 col-xs-9 col-sm-9 pull-right">
                            <button type="submit" class="btn  btn-block buton btn-flat" name="login-button">Entrar</button>
                            <br>
                            <h4 class="" style="color:red"><%= status %></h4>
                        </div>
                    </div>
                </form>
                </form>
            </div>
        </div>
    </div>
</body>

</html>